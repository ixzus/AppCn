<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
    tools:context="com.yltx.appcn.login.LoginActivity">

    <include layout="@layout/toolbar_base" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/bg_white"
        >
    <com.ixzus.applibrary.widget.ClearEditTextView
        style="@style/InputStyle"
        android:id="@+id/cet_old"
        android:layout_marginTop="20dp"
        android:hint="请输入旧密码" />

    <com.ixzus.applibrary.widget.ClearEditTextView
        style="@style/InputStyle"
        android:id="@+id/cet_new"
        android:layout_marginTop="10dp"
        android:hint="请设置新密码" />

    <com.ixzus.applibrary.widget.ClearEditTextView
        style="@style/InputStyle"
        android:id="@+id/cet_comfire"
        android:layout_marginTop="10dp"
        android:hint="请确认新密码" />


    <com.allen.library.SuperButton
        android:id="@+id/b"
        style="@style/ButtonYesStyle"
        android:layout_marginTop="10dp"
        android:text="确认修改"
        app:sCornersRadius="1dp"
        app:sSelectorDisableColor="@color/button_no"
        app:sSelectorNormalColor="@color/button_yes"
        app:sSelectorPressedColor="@color/button_yes_click"
        app:sUseSelector="true"
        android:textSize="18sp"/>
    </LinearLayout>





</LinearLayout>
