<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yltx.appcn.login.LoginActivity">

    <include layout="@layout/toolbar" />


    <com.allen.library.SuperButton
        android:id="@+id/button"
        style="@style/ButtonYesStyle"
        android:layout_margin="10dp"
        android:text="登录"
        app:sCornersRadius="1dp"
        app:sSelectorDisableColor="@color/button_no"
        app:sSelectorNormalColor="@color/button_yes"
        app:sSelectorPressedColor="@color/button_yes_click"
        app:sUseSelector="true" />


    <com.allen.library.SuperButton
        android:id="@+id/button1"
        style="@style/ButtonYesStyle"
        android:layout_margin="10dp"
        android:text="登录"
        android:textColor="@color/base_color"
        app:sCornersRadius="1dp"
        app:sSelectorDisableColor="@color/button_no"
        app:sSelectorNormalColor="@color/white"
        app:sSelectorPressedColor="@color/button_no"
        app:sStrokeColor="@color/base_color"
        app:sStrokeWidth="1px"
        app:sUseSelector="true" />

    <com.ixzus.applibrary.widget.ClearEditTextView
        style="@style/InputStyle"
        android:layout_margin="10dp"
        android:drawableLeft="@mipmap/main_home_normal"
        android:hint="请输入" />

</LinearLayout>
