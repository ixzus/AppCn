<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlinput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inputCancel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="取消"
        android:textColor="@color/text_grey_medium"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="失败原因"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/inputCommnit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:text="提交"
        android:textColor="@color/base_color"
        android:textSize="16sp" />

    <com.ixzus.applibrary.widget.ClearEditTextView
        android:id="@+id/inputRemark"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/inputCancel"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_input"
        android:gravity="start"
        android:hint="请填写失败原因"
        android:lineSpacingExtra="8dp"
        android:padding="10dp"
        android:textColor="@color/input"
        android:textColorHint="@color/input_hint"
        android:textSize="14sp" />


</RelativeLayout>
