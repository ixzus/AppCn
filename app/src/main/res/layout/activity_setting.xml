<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.yltx.appcn.login.LoginActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >
    <com.allen.library.SuperTextView
        android:id="@+id/st_modifypwd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:sLeftTextString="修改密码"
        app:sLeftTextColor="@color/my_lefttext_gravy"
        app:sLeftTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/ic_next"
        />
        <com.allen.library.SuperTextView
            android:id="@+id/st_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
            app:sLeftTextString="新消息通知"
            app:sLeftTextColor="@color/my_lefttext_gravy"
        app:sLeftTextSize="14sp"
            app:sRightTextString="关闭"
            app:sRightTextColor="@color/tv_blue"
        />
        <com.allen.library.SuperTextView
            android:id="@+id/st_shock"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:sLeftTextString="消息震动"
            app:sLeftTextColor="@color/my_lefttext_gravy"
            app:sLeftTextSize="14sp"
            app:sRightTvDrawableRight="@mipmap/ic_next"
            android:visibility="gone"
            />


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/pwd_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pwd_title">

        <TextView
            android:id="@+id/tv_msgshock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/my_lefttext_gravy"
            android:text="消息震动"

            />

        <Switch
            android:id="@+id/st_toclose"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:switchMinWidth="48dp"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/thumb"
            android:track="@drawable/track" />

    </RelativeLayout>
    <View
        style="@style/HlineViewStyle_F4" />



    <TextView
        android:id="@+id/tv_quit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="#508cee"
        android:textSize="18sp"
        android:text="退出登录"
        android:maxLines="2"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />







</LinearLayout>
